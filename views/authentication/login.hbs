<div class="page">
  <div class="Left">
    <div class="logoNew">
      <img src="/images/logoNew.png" alt="nouveau logo">
    </div>
    <div class="titrePage">
      <div class="ellipse">
        <img src="/images/ellipse.png" alt="ellipse">
      </div>   

      <div class="titrePetit">
        <p>Veuillez entrer votre identifiant et votre mot de passe pour accéder à votre espace personnel</p>
      </div>

      <form action="/login" method="post">
        <label for="username">Identifiant: </label>
            <div class="rectangleJaune"></div>
            <div class="inputForm">
            <input type="text" name="username">
          </div>    
    

        <label for="password">Mot de passe: </label>
          <div class="rectangleJaune"></div>
          <div class="inputForm">
            <input type="password" name="password">
          </div>
    

  {{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
  {{/if}}
        <div class="lienOubli">
          <div class="traitBlanc"></div>
          <a href="/oubliPwd">J'ai oublié mon mot de passe</a>
        </div>

        <button type="submit">VALIDER</button>
      </form>
    </div>
  </div>

  <div class="photoLogin">
    <img src="/images/spectacle.png" alt="">
  </div>

  <div class="topRight">
      <div id="connexion">
        <img src="/images/connexion.svg" alt="connexion">
      </div>
      <div class="lestrembles">
        <img src="/images/lestrembles.svg" alt="lestrembles">
      </div>
      
  </div>
</div>

